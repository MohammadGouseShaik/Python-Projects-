import random

words = ['apple', 'banana', 'cherry', 'grapes', 'strawberry', 'fig']
chosen_word = random.choice(words)
max_guesses = 6
incorrect_guesses = []

while True:
    hidden_word = ''.join([c if c in incorrect_guesses or c == ' ' else '_' for c in chosen_word])
    print(hidden_word)
    if hidden_word == chosen_word:
        print("Congratulations, you guessed the word!")
        break
    elif len(incorrect_guesses) == max_guesses:
        print("Sorry, you've used up all your guesses. The word was", chosen_word)
        break
    else:
        guess = input("Guess a letter: ")
        if guess in chosen_word:
            print("Correct!")
        else:
            print("Incorrect.")
            incorrect_guesses.append(guess)
